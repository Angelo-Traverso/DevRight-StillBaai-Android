<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewHome"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvStayTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cardViewHome"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/cardViewHome"
        android:text="Bed and Breakfast"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tvStayCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvStayTitle"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/cardViewHome"
        android:text="Self Catering"
        tools:ignore="TouchTargetSizeCheck" />


</RelativeLayout>
