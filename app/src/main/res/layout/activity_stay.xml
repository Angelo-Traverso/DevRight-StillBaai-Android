<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Stay">

    <!--Need to alter the margin values (currently hardcoded)-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:layout_marginTop="210dp"
        app:headerLayout="@layout/drawer_header_layout"
        app:menu="@menu/drawer_menu" />

    <RelativeLayout
        android:id="@+id/relDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameParentStay"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imgStay"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/stay_image_background" />

            <!--<ImageButton
                android:id="@+id/ibBurgerMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:background="@android:color/transparent"
                android:contentDescription="placeholder"
                android:src="@drawable/baseline_menu_24"
                tools:ignore="TouchTargetSizeCheck" />-->

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/nav_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:background="@android:color/transparent"
                android:contentDescription="placeholder"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:navigationIcon="@drawable/baseline_menu_24"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tvStayHeading"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="40dp"
                android:gravity="center|start"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="20"
                android:text="@string/StayHeading"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold" />

        </FrameLayout>

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/frameParentStay"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp"
            android:alpha="0.6"
            android:gravity="center"
            android:hint="@string/searchBar"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/searchBarHint"
            android:textStyle="italic" />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etSearch"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:id="@+id/linearStayListings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_corner_radius_stay"
                android:orientation="vertical">

                <!-- ... Rest of your views ... -->

            </LinearLayout>
        </ScrollView>
</RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
