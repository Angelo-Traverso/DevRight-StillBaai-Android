<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewHome"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        >
    <ImageView
        android:id="@+id/imgEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/eel_event_image" />

    </androidx.cardview.widget.CardView>

    <!-- Event name -->
    <TextView
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/cardViewHome"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Eel Feeding" />


    <!--Event Time-->
    <TextView
        android:id="@+id/eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventName"
        android:textSize="14sp"
        android:drawablePadding="4dp"
        android:drawableTint="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:drawableStart="@drawable/clock_24px"
        android:layout_toEndOf="@+id/cardViewHome"
        android:text="18:00" />


    <!--Event Location-->
    <TextView
        android:id="@+id/eventLocation"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventTime"
        android:layout_toEndOf="@+id/cardViewHome"
        android:textSize="14sp"
        android:drawablePadding="4dp"
        android:fontFamily="@font/roboto_regular"
        android:drawableTint="@color/black"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:drawableStart="@drawable/location"
        android:text="Backyard, 2440" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:layout_toStartOf="@+id/btnGoToEvent"
        android:layout_marginEnd="16dp"
        android:background="@color/black"
        android:alpha="0.2"
        android:layout_marginTop="8dp"
        />

    <!--Save Event-->
    <Button
        android:id="@+id/btnGoToEvent"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:text="Go" />


</RelativeLayout>