<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="16dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:text="Stillbaai Tourism"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvContactName"
        android:layout_marginTop="16dp"
        android:text="wefwefefw"
        android:autoLink="map"
        android:drawablePadding="8dp"
        android:textSize="16sp"
        android:padding="8dp"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/baseline_location_on_24"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLocation"
        android:text="wefwefefw"
        android:autoLink="email"
        android:padding="8dp"
        style="@style/TextViewLinkTheme"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/mail"
        app:drawableTint="@color/black" />

    <TextView
        android:id="@+id/tvContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmail"
        android:text="wefwefefw"
        android:padding="8dp"
        android:autoLink="phone"
        style="@style/TextViewLinkTheme"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:drawablePadding="8dp"
        app:drawableStartCompat="@drawable/call"
        app:drawableTint="@color/black" />

    <View
        android:id="@+id/endLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvContact"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:alpha="0.3"
        android:layout_marginEnd="16dp"
        />

</RelativeLayout>