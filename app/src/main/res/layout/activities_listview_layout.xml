<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_image"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/tvActivityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/imageView"
        android:layout_alignTop="@id/imageView"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Louise Leather" />

    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"

        android:layout_toEndOf="@id/imageView"
        android:layout_below="@id/tvActivityName"
        android:text="Arts and Crafts" />

    <TextView
        android:id="@+id/tvWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/imageView"
        android:layout_below="@id/tvCategoryName"
        android:drawableStart="@drawable/website"
        android:text="" />

    <TextView
        android:id="@+id/tvContactNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWebsite"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/imageView"
        android:drawableStart="@drawable/call"
        android:text="000 000 0000" />
</RelativeLayout>