<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Eat">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Need to alter the margin values (currently hardcoded)-->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/drawer_header_layout"
            app:menu="@menu/drawer_menu" />

        <RelativeLayout
            android:id="@+id/relDrawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frameParentEat"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/imgEat"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eat_image_background" />

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center|start"
                    android:background="@android:color/transparent"
                    android:minWidth="32dp"
                    android:src="@drawable/baseline_menu_24"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/tvEatHeading"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center|start"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="20"
                    android:text="@string/eatHeading"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/frameParentEat">
                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:hint="@string/searchBar"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/searchBarHint"
                    android:textStyle="italic"
                    android:autofillHints="" />
                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/etSearch"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="1dp"
                    android:layout_centerInParent="true" />


               <!-- <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etSearch"
                    tools:ignore="SpeakableTextPresentCheck">
                    <LinearLayout
                        android:id="@+id/linearEatListings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_corner_radius_stay"
                        android:orientation="vertical">
                    </LinearLayout>
                </ScrollView>-->
            </RelativeLayout>
        </RelativeLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</RelativeLayout>